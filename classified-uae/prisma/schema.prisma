generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Ad {
  id          String    @id @default(cuid())
  title       String
  description String
  price       Float
  category    String
  status      AdStatus  @default(PENDING)  // Change this line
  
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  media       Media[]
  payment     Payment?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  expiresAt   DateTime?
  publishedAt DateTime?
  
  @@index([status])
  @@index([category])
}

model Media {
  id       String @id @default(cuid())
  adId     String
  url      String
  position Int

  createdAt DateTime @default(now())

  ad Ad @relation(fields: [adId], references: [id], onDelete: Cascade)

  @@unique([adId, position])
  @@index([adId])
}

model Payment {
  id String @id @default(cuid())

  adId     String @unique
  provider String // Ziina
  amount   Int
  currency String // AED
  status   PaymentStatus

  providerRef String // Ziina payment ID
  rawPayload  Json

  createdAt DateTime @default(now())

  ad Ad @relation(fields: [adId], references: [id], onDelete: Cascade)

  @@index([adId])
  @@index([providerRef])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  phone    String?  @unique
  name     String?  
  password String?
  role     UserRole  @default(ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  audits AuditLog[]
  ads    Ad[]
}

enum UserRole {
  ADMIN
  SUPERVISOR
}

model AuditLog {
  id String @id @default(cuid())

  userId   String
  action   String
  entity   String
  entityId String?
  payload  Json?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity])
}

enum AdStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  PUBLISHED
  EXPIRED
}

enum AdCreator {
  SYSTEM
  ADMIN
}
